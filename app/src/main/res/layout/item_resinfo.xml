<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/bg_profile"
        android:scaleType="fitXY"
        android:id="@+id/list_photo"
        />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listtext_resName"
                android:textColor="#000"
                android:textSize="21sp"
                android:textStyle="bold"
                android:text="Resaurant"

                />
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:numStars="5"
                android:id="@+id/list_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:rating="3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Restaurant Type:"
                android:textColor="#8B8B83"
                android:id="@+id/list_resType"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="From the current location: "
                android:textColor="@color/wallet_holo_blue_light"
                android:id="@+id/list_duration"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>