<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.groupwork.activity.Register"
    android:background="@drawable/rest"
    >


    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="110dp"
        app:srcCompat="@drawable/logotwo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/tv_existingaccount"
        android:layout_width="wrap_content"
      android:layout_height="wrap_content"

        android:text="Already Have An Account? Click Here To Login"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/user1"
        android:id="@+id/iv_forename"
        android:layout_marginEnd="29dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/logo"
        android:layout_marginTop="95dp" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/user1"
        android:id="@+id/imageView4"
        android:layout_below="@+id/iv_forename"
        android:layout_alignStart="@+id/iv_forename" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/password"
        android:layout_marginTop="45dp"
        android:id="@+id/imageView6"
        android:layout_below="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:visibility="invisible"/>

    <TextView
        android:text="Check Email Availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_marginTop="14dp"
        android:id="@+id/tv_verifyemail"
        android:layout_alignEnd="@+id/et_forename"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:layout_toEndOf="@+id/imageView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_forename"
        android:textColor="@android:color/white"
        android:background="@drawable/roundededittext"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:hint="Forename"
        android:textColorHint="@color/White"/>


    <ImageView
        android:layout_width="55dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/emailcon"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_emailaddress"
        android:hint="Email Address"
        android:textColorHint="@color/White"
        android:textColor="@android:color/white"
        android:background="@drawable/roundededittext"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_above="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_above="@+id/imageView7"
        android:layout_alignStart="@+id/et_surname"
        android:id="@+id/et_securityquestion"
        android:layout_alignEnd="@+id/tv_verifyemail"
        android:hint="What Is Your Favourite City"
        android:textColorHint="@color/White"
        android:textColor="@android:color/white"
        android:background="@drawable/roundededittext"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="12sp"
        android:visibility="invisible"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password"
        android:textColorHint="@color/White"
        android:textColor="@android:color/white"
        android:background="@drawable/roundededittext"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:hint="Password"

        android:layout_alignBottom="@+id/imageView7"
        android:layout_toEndOf="@+id/imageView7"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="57dp"
        app:srcCompat="@drawable/password"
        android:id="@+id/imageView7"
        android:layout_below="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6"
        android:visibility="invisible"/>

    <Button
        android:text="Register"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tv_existingaccount"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_register"
        android:background="@drawable/buttonshape"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:visibility="invisible"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_surname"
        android:background="@drawable/roundededittext"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginBottom="12dp"
        android:hint="Surname"
        android:textColorHint="@color/White"
        android:layout_above="@+id/imageView5"
        android:layout_alignStart="@+id/et_forename" />


</RelativeLayout>