<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.groupwork.activity.Login"
    android:background="@drawable/rest"
    >

    <TextView
        android:id="@+id/tv_noaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont Have An Account Click Here"
        android:textAlignment="center"
        android:textColor="@color/color_white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_login"
        android:layout_marginBottom="49dp"
        android:layout_alignEnd="@+id/btn_login" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/logotwo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/et_uname_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_login"
        android:layout_below="@+id/logo"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/color_white"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:hint="Username"
        android:backgroundTint="@color/color_white"
        android:textColorHint="@color/color_white"
        android:theme="@style/MyEditTextTheme"
        android:layout_toEndOf="@+id/imageView" />

    <EditText
        android:id="@+id/et_pword_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_uname_login"
        android:layout_alignStart="@+id/et_uname_login"
        android:layout_below="@+id/et_uname_login"
        android:layout_marginTop="45dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textColorHint="@color/color_white"
        android:backgroundTint="@color/color_white"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/user1"
        android:id="@+id/imageView"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_above="@+id/et_pword_login"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/password"
        android:layout_alignBottom="@+id/et_pword_login"
        android:layout_toStartOf="@+id/et_pword_login"
        android:id="@+id/imageView2" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/buttonshape"
        android:elevation="0dp"
        android:shadowColor="#1745FF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Login"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/color_white"
        android:textSize="24sp"
        android:layout_above="@+id/tv_noaccount"
        android:layout_centerHorizontal="true" />


</RelativeLayout>







